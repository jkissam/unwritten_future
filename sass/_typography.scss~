// typography

// 1.1 Body
body { color: $base-text; font: 93.75%/1.6em $sans-serif; }

// 1.2 Headers
h1, h2, h3, h4, h5, h6 { font-weight: normal; margin: 0 0 1em; }
h1 { font-size: 2em; line-height: 1.2em; }
h2 { font-size: 1.6em; line-height: 1.25em; }
h3 { font-size: 1.333em; line-height: 1.2em; }
h4 { font-size: 1.2em; line-height: 1.3333em; font-weight: bold; }
h5 { font-size: 1.0666em; font-weight: bold; margin-bottom: 0; }
h6 { font-size: 1em; font-weight: bold; margin-bottom: 0; }

// 1.3 Text
p { margin-bottom: 1.5em; }
p.leftalign { text-align: left; }
p.centeralign { text-align: center; }
p.rightalign { text-align: right; }
address { font-style: normal; margin-bottom: 1.5em; }
blockquote { margin: 0 0 0 2em; padding-bottom: 1.8em; }
blockquote p { margin-bottom: 0.75em; }

// 1.4 Lists
ul, ol { margin: 0 0 1.5em 2em; }
ul ul, ul ol, ol ul, ol ol { margin-bottom: 0; }
dl { margin: 0 0 1.5em 0; }
dt { font-weight: bold; }
dd { margin: 0 0 1.5em 2em; }
dd ul, dd ol { margin-left: 0; }

nav ul { margin: 0; }
nav ul li { margin: 0; padding: 0; }
nav ul ul { margin-left: 1.5em; }

// 1.5 Links
a { text-decoration: none; }
a:link { color: $ws-blue; }
a:visited { color: $ws-blue; }
.no-touch a:hover { color: $ws-red; }
a:active { color: $ws-blue; }

// 1.6 Images
img { max-width: 100%; height: auto !important; }
.alignleft,
.alignright,
.aligncenter { display: block; width: auto; margin: 0 auto 1.5em; } /* mobile-first: center everything; we'll align stuff later in the media queries */

// 1.7 Tables
th, td { padding: 10px; }

// 1.8 Form elements
input, select, textarea { border: 1px solid $light-gray; color: $base-text; padding: 0.5em; font-family: $sans-serif; width: 100%; outline: 0; }
input:focus, select:focus, textarea:focus { border-color: $base-text; }
input[type="checkbox"],input[type="radio"],input[type="submit"],input[type="image"] { width: auto; }
input[type="image"] { border: 0; outline: invert none medium; }
input[type="search"] { -webkit-appearance: none; moz-appearance: none; }
input, select { max-width: 400px; }
fieldset { margin: 2em 0; border-color: $light-gray; }
legend { font: 1.333em $sans-serif; color: #333; border: 1px solid $light-gray; padding: 2px 15px; background: $very-light-gray; }
legend + * { -webkit-margin-top-collapse: separate; }
.form-type-checkbox label, .form-type-radio label { color: $medium-gray; }
input.form-checkbox:checked + label, input.form-radio:checked + label { color: $base-text; }
input[type="submit"], button, a.button {
  background: $very-light-gray;
  border-radius: 0;
  color: $base-text;
  padding: 0.5em 1em;
  margin-right: 1em;
  border: none;
  font-size: 1em;
  cursor: pointer;
}
.no-touch input[type="submit"]:hover, .no-touch button:hover, .no-touch a.button:hover {
  background: $light-gray;
}

// iPad in portrait mode or larger //
@media screen and (min-width: 768px) {
	.alignleft { float: left; margin: 0 20px 20px 0; max-width: 50%; }
	.alignright { float: right; margin: 0 0 20px 20px; max-width: 50%; }
	.aligncenter { display: block; width: auto; margin: 0 auto 1.5em; }
}
